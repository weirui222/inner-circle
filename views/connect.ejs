<h2>Connect Page</h2>

<a href="/auth/logout">Logout</a>

<h4>Potentail Friends</h4>
<ul>
  <% potentialFriends.forEach(function(instance) { %>
    <li>
      <form action="/addfriend" method="POST">
        <input hidden type="text" name="friendId" value="<%= instance.dataValues.id %>">
        <label for="name"><%= instance.dataValues.name %></label>
        <button class="btn btn-primary" type="submit">Add As Friends</button>
      </form>
    </li>
  <% }); %>
</ul>

<h4>Friends</h4>
<ul>
  <% friends.forEach(function(instance) { %>
    <li>
      <form action="/friend/:id" method="POST">
        <input hidden type="text" name="title" value="<%= instance.dataValues.id %>">
        <label for="name"><%= instance.dataValues.name %></label>
      </form>
    </li>
  <% }); %>
</ul>
