<h1><%= post.title %></h1>

<p>
  <strong><%= moment(post.createdAt).calendar() %></strong>
</p>

<p>
  <% if(post.url) { %>
    <a href="<%= post.url %>" target="_blank"><%= post.content %></a>
  <% } else { %>
    <%- marked(post.content) %>
  <% } %>

</p>
<a class="btn btn-info" style="padding:0 20px" href="/posts/edit/<%= post.id %>">EDIT</a>
<a class='btn-sm btn-info <%= post.isPublic?"delete-ispublic-link":"delete-draft-link" %>'
  href="/posts/delete/<%= post.id %>">DELETE</a>
