<div class="row index">
  <div class="col-sm-4 col-sm-offset-1">
    <div class="img img1">
    </div>

    <form action="/auth/login" method="POST">
      <div class="form-group">
        <label for="authEmail">Email</label>
        <input id="authEmail" class="form-control" type="email" name="email">
      </div>

      <div class="form-group">
        <label for="authPassword">Password</label>
        <input id="authPassword" class="form-control" type="password" name="password">
      </div>

      <input class="btn btn-info" type="submit" value="Log In">
    </form>
    <a href="/auth/facebook" class="btn btn-info" style="margin-top: 40px;">
      Login via Facebook
    </a>
  </div>

  <div class="col-sm-4 col-sm-offset-2">
    <div class="img img2">
    </div>
    <form action="/auth/signup" method="POST">
      <div class="form-group">
        <label for="authEmail">Email</label>
        <input id="authEmail" class="form-control" type="email" name="email">
      </div>

      <div class="form-group">
        <label for="authName">Name</label>
        <input id="authName" class="form-control" type="text" name="name">
      </div>

      <div class="form-group">
        <label for="authPassword">Password</label>
        <input id="authPassword" class="form-control" type="password" name="password">
      </div>

      <input class="btn btn-info" type="submit" value="Sign Up">
    </form>
  </div>
</div>
